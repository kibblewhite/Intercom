<AuthorizeView>
    <Authorized>
        <MudForm>
            <MudButton Variant="Variant.Outlined"
                       EndIcon="@Icons.Material.Filled.Logout"
                       OnClick="NavigateLogout"
                       Class="my-0 mx-2"
                       Color="Color.Primary">Logout</MudButton>
        </MudForm>
    </Authorized>
    <NotAuthorized>
        <MudButton Variant="Variant.Outlined"
                   EndIcon="@Icons.Material.Filled.Login"
                   OnClick="NavigateLogin"
                   Class="my-0 mx-2"
                   Color="Color.Primary">Login</MudButton>
    </NotAuthorized>
</AuthorizeView>
