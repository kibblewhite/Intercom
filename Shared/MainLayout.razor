@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Heylo, Intercom!</MudText>
        <MudSpacer />

        <AuthorizeView>
            <Authorized>
                <MudText Class="me-4">@context.User.Identity?.Name</MudText>
            </Authorized>
        </AuthorizeView>

        <MudMenu AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopRight">

            <ActivatorContent>
                <MudIcon Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
            </ActivatorContent>

            <ChildContent>
                <LoginDisplay />
            </ChildContent>

        </MudMenu>

    </MudAppBar>

    <MudMainContent>
        <MudCard Class="py-6 px-12">
            @Body
        </MudCard>
    </MudMainContent>

</MudLayout>
